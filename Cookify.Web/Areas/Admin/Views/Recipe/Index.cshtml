<div class="admin-header">
    <h1 class="admin-header__title">Przepisy</h1>
    <a asp-action="Upsert" class="admin-btn">Dodaj nowy</a>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th width="10%">
                    Id
                </th>
                <th width="10%">
                    Nazwa
                </th>
                <th width="20%">
                    Opis
                </th>
                <th width="10%">
                    Kategoria
                </th>
                <th width="10%">
                    Poziom trudności
                </th>
                <th width="10%">
                    Czas przygotowania
                </th>
                <th width="10%">
                    Adres URL zdjęcia
                </th>
                <th width="10%">
                    Zaakceptowany?
                </th>
                <th width="5%">
                    Edytuj
                </th>
                <th width="5%">
                    Usuń
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)
            {
                <tr>
                    <td width="10%">@recipe.Id</td>
                    <td width="10%">@recipe.Name</td>
                    <td width="20%">@recipe.Description</td>
                    <td width="10%">@recipe.RecipeCategory.Title</td>
                    <td width="10%">@recipe.DifficultyLevel</td>
                    <td width="10%">@recipe.PreparationTime</td>
                    <td width="10%">@recipe.ImageUrl</td>
                    <td width="10%"><input type="checkbox" disabled checked="@recipe.Accepted" /></td>
                    <td width="5%"><a asp-action="Upsert" asp-route-id="@recipe.Id" class="admin-btn">Edytuj</a></td>
                    <td width="5%"><a asp-action="Delete" asp-route-id="@recipe.Id" class="admin-btn">Usuń</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nie ma żadnych przepisów w bazie danych!</p>
}