<div class="admin-header">
    <h1 class="admin-header__title">Składniki</h1>
    <a asp-action="Upsert" class="admin-btn">Dodaj nowy</a>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th width="10%">
                    Id
                </th>
                <th width="30%">
                    Name
                </th>
                <th width="40%">
                    Description
                </th>
                <th width="10%">
                    Edit
                </th>
                <th width="10%">
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model)
            {
            <tr>
                <td width="10%">@ingredient.Id</td>
                <td width="30%">@ingredient.Name</td>
                <td width="40%">@ingredient.Description</td>
                <td width="10%"><a asp-action="Upsert" asp-route-id="@ingredient.Id" class="admin-btn">Edit</a></td>
                <td width="10%"><a asp-action="Delete" asp-route-id="@ingredient.Id" class="admin-btn">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no ingredients in the database!</p>
}