<div class="admin-header">
    <h1 class="admin-header__title">Kategorie</h1>
    <a asp-action="Upsert" class="admin-btn">Dodaj nową</a>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th width="10%">
                    Id
                </th>
                <th width="70%">
                    Title
                </th>
                <th width="10%">
                    Edit
                </th>
                <th width="10%">
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipeCategory in Model)
            {
            <tr>
                <td width="10%">@recipeCategory.Id</td>
                <td width="70%">@recipeCategory.Title</td>
                <td width="10%"><a asp-action="Upsert" asp-route-id="@recipeCategory.Id" class="admin-btn">Edit</a></td>
                <td width="10%"><a asp-action="Delete" asp-route-id="@recipeCategory.Id" class="admin-btn">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no recipe categories in the database!</p>
}