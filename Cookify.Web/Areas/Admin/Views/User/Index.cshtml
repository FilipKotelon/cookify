<div class="admin-header">
    <h1 class="admin-header__title">Użytkownicy</h1>
    <a asp-area="Identity" asp-page="/Account/Register" class="admin-btn">Stwórz nowego użytkownika</a>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th width="15%">
                    Nazwa użytkownika
                </th>
                <th width="25%">
                    Email
                </th>
                <th width="10%">
                    Rola
                </th>
                <th width="5%">
                    Edytuj
                </th>
                <th width="5%">
                    Usuń
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td width="15%">@user.Name</td>
                    <td width="25%">@user.Email</td>
                    <td width="10%">@user.Role</td>
                    <td width="5%"><a asp-action="EditUser" asp-route-id="@user.Id" class="admin-btn">Edytuj</a></td>
                    <td width="5%"><form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="admin-btn">Usuń</button></form></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nie znaleziono użytkowników w bazie danych!</p>
}