<div class="admin-header">
    <h1 class="admin-header__title">Zdjęcia</h1>
</div>


@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th width="20%">
                    Id
                </th>
                <th width="30%">
                    Adres URL zdjęcia
                </th>
                <th width="20%">
                    Tytuł
                </th>
                <th width="30%">
                    Podgląd
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var image in Model)
            {
            <tr>
                <td width="20%">@image.Id</td>
                <td width="30%"><a href="@image.Path">@image.Path</a></td>
                <td width="20%">@image.Title</td>
                <td width="30%"><img src="@image.Path" alt="@image.Title" width="200px" /></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nie znaleziono zdjęć w bazie danych!</p>
}