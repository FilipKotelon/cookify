@model Cookify.Models.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Wyślij swój przepis";
}

<form class="ck-form white-panel" id="account" method="post">

    <h1 class="ck-form__title h1">@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="ck-form__field">
        <input asp-for="Recipe.Name" class="bordered-input" placeholder="Nazwa przepisu" />
        <span asp-validation-for="Recipe.Name" class="text-danger"></span>
    </div>
    <div class="ck-form__field">
        <textarea asp-for="Recipe.Description" class="bordered-textarea" placeholder="Opis przepisu"></textarea>
        <span asp-validation-for="Recipe.Description" class="text-danger"></span>
    </div>
    <div class="ck-form__field">
        <input asp-for="Recipe.DifficultyLevel" class="bordered-input" placeholder="Poziom trudności przepisu" />
        <span asp-validation-for="Recipe.DifficultyLevel" class="text-danger"></span>
    </div>
    <div class="ck-form__field">
        <input asp-for="Recipe.PreparationTime" class="bordered-input" placeholder="Czas przyrządzenia" />
        <span asp-validation-for="Recipe.PreparationTime" class="text-danger"></span>
    </div>
    <div class="ck-form__field">
        <input asp-for="Recipe.ImageUrl" class="bordered-input" placeholder="URL zdjęcia przepisu" />
        <span asp-validation-for="Recipe.ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="ck-btn">Wyślij</button>
</form>

