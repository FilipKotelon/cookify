@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">List of ingredients:</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-light" asp-action="Upsert">Create New Ingredient</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model)
                {
                <tr>
                    <td width="10%">@ingredient.Id</td>
                    <td width="30%">@ingredient.Name</td>
                    <td width="40%">@ingredient.Description</td>
                    <td width="10%"><a asp-action="Upsert" asp-route-id="@ingredient.Id">Edit</a></td>
                    <td width="10%"><a asp-action="Delete" asp-route-id="@ingredient.Id">Delete</a></td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no ingredients in the database!</p>
    }
</div>