@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">List of recipe categories:</h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Title
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recipeCategories in Model)
                {
                    <tr>
                        <td width="20%">@recipeCategories.Id</td>
                        <td width="80%">@recipeCategories.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no recipe categories in the database!</p>
    }
</div>